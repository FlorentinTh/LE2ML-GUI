{
  "extends": ["standard", "plugin:prettier/recommended", "plugin:json/recommended"],
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "semi": [
        "error",
        "always"
    ],
    "max-len": [
        "warn",
        {
            "code": 90,
            "tabWidth": 2,
            "comments": 110,
            "ignoreComments": false,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "ignoreStrings": false,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }
    ]
  }
}
