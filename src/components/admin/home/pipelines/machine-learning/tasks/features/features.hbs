<div class="action action-top-left">
  <button id="select-all-toggle" data-toggle='false'>
    <i class="far fa-square"></i>
  </button>
</div>
<div class="task-content">
  <h2>{{title}}</h2>
  <div class="save-file-container">
    <div class="wrapper">
      <div class="switch-label">
        <span>Save process result to file for reuse ?</span>
      </div>
      <div class="switch-save-file">
        <input type="radio" name="switch-save" id="switch-off" checked />
        <input type="radio" name="switch-save" id="switch-on" />
        <span class="toggle"></span>
      </div>
    </div>
    <input type="text" name="save-filename" id="save-filename" autocomplete="false" placeholder="Enter a filename"
      required>
  </div>
  <section id="feature-list-container"></section>
</div>
<div class="btn-group-nav">
  <div class="next">
    <button class="primary">
      <i class="fas fa-arrow-right"></i>
    </button>
  </div>
  <div class="previous">
    <button class="secondary">
      <i class="fas fa-arrow-left"></i>
      Back
    </button>
  </div>
</div>
