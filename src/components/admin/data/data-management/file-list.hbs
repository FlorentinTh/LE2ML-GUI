{{#each files as |file|}}
<div class="grid-item" id="file-infos">
  <div class="left">
    <div class="label">
      <h3>
        {{file.filename~}}.{{~file.type}}
      </h3>
    </div>
    <div class="infos">
      <p class="info">
        <i class="fas fa-weight-hanging"></i>
        {{#[format/bytes] file.size~}}
        {{~/[format/bytes]}}
      </p>
      <p class="info">
        <i class="fas fa-calendar-check"></i>
        created on : {{#[format/date] file.dateCreated 'DD/MM/YYYY'~}}{{~/[format/date]~}}
      </p>
    </div>
  </div>
  <div class="right">
    <div class="actions">
      <p class="action">
        <button id="rename">Rename</button>
      </p>
      <p class="action">
        <button id="delete">Delete</button>
      </p>
    </div>
  </div>
</div>
{{else}}
{{#[utils/compare] loading '===' true}}
<div class="grid-item">
  <div class="loading-item">
    <span class="loading">
      Fetching data...
      <i class="fas fa-spinner"></i>
    </span>
  </div>
</div>
{{else}}
<div class="grid-item">
  <div class="not-found">
    <p>No files found ☹️</p>
  </div>
</div>
{{/[utils/compare]}}
{{/each}}
