{{#each jobs as |job|}}
<div class="grid-item" id="job-infos" data-jobId="{{job._id}}">
  <div class="left">
    <div class="label">
      <h3>
        {{~job.label~}}
      </h3>
    </div>
    <div class="infos">
      {{~#[utils/compare] job.state '===' 'started'~}}
      <p class="info">
        <i class="fas fa-paper-plane"></i>
        Started on :
        {{#[format/date] job.startedOn 'DD/MM/YYYY'~}}{{~/[format/date]}}
        @
        {{#[format/date] job.startedOn 'HH:mm'~}}{{~/[format/date]~}}
      </p>
      {{~else~}}
      <p class="info">
        <i class="fas fa-check"></i>
        Completed on :
        {{#[format/date] job.completedOn 'DD/MM/YYYY'~}}{{~/[format/date]}}
        @
        {{#[format/date] job.completedOn 'HH:mm'~}}{{~/[format/date]~}}
      </p>
      {{~/[utils/compare]~}}
    </div>
  </div>
  <div class="right">
    <div class="actions">

    </div>
  </div>
</div>
{{else}}
{{#[utils/compare] loading '===' true}}
<div class="grid-item">
  <div class="loading-item">
    <span class="loading">
      Fetching data...
      <i class="fas fa-spinner"></i>
    </span>
  </div>
</div>
{{else}}
<div class="grid-item">
  <div class="not-found">
    <p>No job found ☹️</p>
  </div>
</div>
{{/[utils/compare]}}
{{/each}}
