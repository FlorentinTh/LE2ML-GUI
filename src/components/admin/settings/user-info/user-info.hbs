<h1>{{title}}</h1>

<div class="user-infos">
  <div class="form">
    <form action="#">
      <label for="email"></label>
      <input type="email" id="email" name="email" autocomplete="email" required readonly />
      <label for="lastname"></label>
      <input type="text" id="lastname" name="lastname" autocomplete="family-name" placeholder="Lastname" required />
      <label for="firstname"></label>
      <input type="text" id="firstname" name="firstname" autocomplete="given-name" placeholder="Firstname" required />
      <label for="password"></label>
      <input type="password" id="password" name="password" placeholder="Password" autocomplete="current-password"
        minlength="8" required />
      <label for="password-confirm"></label>
      <input type="password" id="password-confirm" name="passwordConfirm" placeholder="Password Confirmation"
        autocomplete="false" minlength="8" required />
      <button type="submit">Change information</button>
    </form>
    <button id="cancel" class="link">Cancel</button>
  </div>
</div>
