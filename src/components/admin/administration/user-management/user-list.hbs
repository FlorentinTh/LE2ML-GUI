{{#each users as |user|}}
<div class="grid-item" id="user-infos" data-user="{{user._id}}">
  <div class="head">
    <i class="fas fa-user-circle"></i>
    <span>
      {{~#[format/capitalize-first] user.firstname~}}{{~/[format/capitalize-first]}}
      {{#[format/capitalize-first] user.lastname~}}{{~/[format/capitalize-first]~}}
    </span>
  </div>
  <div class="infos">
    <p class="info">
      <strong>{{user.firstname}} {{user.lastname}}</strong>
    </p>
    <p class="info">
      <i class="fas fa-envelope"></i>
      {{~user.email~}}
    </p>
    <p class="info">
      <i class="fas fa-calendar-check"></i>created on
      {{#[format/date] user.dateCreated 'DD/MM/YYYY'~}}{{~/[format/date]~}}
    </p>
    <p class="info">
      <i class="fas fa-clock"></i>
      {{~#[utils/compare] user.lastConnection '===' null~}}
      no connection so far.
      {{~else~}}
      last conn. on {{#[format/date] user.lastConnection 'DD/MM/YYYY'~}}{{~/[format/date]}} @
      {{#[format/date] user.lastConnection 'HH:mm:ss'~}}{{/[format/date]~}}
      {{~/[utils/compare]~}}
    </p>
  </div>
  <div class="actions">
    {{#[user/connected-user] user._id}}
    <div class="action">
      <button class="btn-disabled" id="edit" disabled>Edit</button>
    </div>
    <div class="action">
      {{#[utils/compare] user.role '===' 'admin'}}
      <button class="btn-disabled" id="edit-role" disabled>Revoke role</button>
      {{else}}
      <button class="btn-disabled" id="edit-role" disabled>Grant role</button>
      {{/[utils/compare]}}
    </div>
    <div class="action">
      <button class="btn-disabled" id="delete" disabled>Delete</button>
    </div>
    {{else}}
    <div class="action">
      <button id="edit">Edit</button>
    </div>
    <div class="action">
      {{#[utils/compare] user.role '===' 'admin'}}
      <button id="edit-role">Revoke role</button>
      {{else}}
      <button id="edit-role">Grant role</button>
      {{/[utils/compare]}}
    </div>
    <div class="action">
      <button id="delete">Delete</button>
    </div>
    {{/[user/connected-user]}}
  </div>
</div>
{{else}}
{{#[utils/compare] loading '===' true}}
<div class="grid-item">
  <div class="loading-item">
    <span class="loading">
      Fetching data...
      <i class="fas fa-spinner"></i>
    </span>
  </div>
</div>
{{else}}
<div class="grid-item">
  <div class="not-found">
    <p>No users found ☹️</p>
  </div>
</div>
{{/[utils/compare]}}
{{/each}}
