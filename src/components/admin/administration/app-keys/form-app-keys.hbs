<div class="form-infos form-infos-modal">
  <div class="form form-key">
    {{#[utils/compare] update '===' false}}
      <div class="description">
        <i class="fas fa-info"></i>
        <p>Generating a key allow your app to access the API. The only scope currently defined restrict your app to update
          all jobs data exclusively.</p>
      </div>
    {{/[utils/compare]}}
    <form action="#">
      <label for="name"></label>
      {{#if name}}
        <input type="text" id="name" name="name" autocomplete="false" placeholder="Name" value="{{name}}" required />
      {{else}}
        <input type="text" id="name" name="name" autocomplete="false" placeholder="Name" required />
      {{/if}}
      <label for="description"></label>
      {{#if description}}
        <input type="text" id="description" name="description" maxlength="50" autocomplete="false" placeholder="Description" value="{{description}}" required />
      {{else}}
        <input type="text" id="description" name="description" maxlength="50" autocomplete="false" placeholder="Description" required />
      {{/if}}
    </form>
  </div>
</div>
