<h1>{{title}}</h1>

<div class="grid-container" id="features">
  <div class="form-elems source-select">
    <div class="form-elem inline">
      <span class="label-container">
        <label for="source">Source</label>
      </span>
      <select id="source">
        <option value="none" data-source="none" disabled>Select a Source</option>
        <option value="inertial" data-source="inertial" selected>Inertial</option>
      </select>
    </div>
  </div>
  <h2 class="title">
    Inertial Features
    <span class="badge badge-right">{{total}}</span>
  </h2>
  <div class="outer-grid">
    <div class="outer-item" id="add">
      <div class="content">
        <i class="fas fa-plus"></i>
        <h3>Add a new feature</h3>
      </div>
    </div>
  </div>
  {{> ../../search/search}}
  {{> ../../filters/filters}}
  <div class="grid-features">
    {{#features}}{{> feature-list}}{{/features}}
  </div>
</div>
