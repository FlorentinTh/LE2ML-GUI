{{#each features as |feature|}}
<div class="grid-item" id="feature-infos" data-feature="{{feature._id}}">
  <div class="left">
    <div class="label">
      <h3>{{feature.label}}</h3>
    </div>
    {{#[utils/compare] feature.enabled '===' true}}
    <p class="state-indic state-enabled">
      <i class="fas fa-circle"></i>
      Enabled
    </p>
    {{else}}
    <p class="state-indic state-disabled">
      <i class="fas fa-circle"></i>
      Disabled
    </p>
    {{/[utils/compare]}}
    <div class="infos">
      <p class="info">
        {{#[utils/compare] feature.domain '===' 'time'}}
        <i class="fas fa-clock"></i>
        {{else}}
        <i class="fas fa-wave-square"></i>
        {{/[utils/compare]}}
        {{~[format/capitalize-first] feature.domain}}
        Feature
      </p>
      <p class="info">
        <i class="fas fa-box-open"></i>
        {{~feature.container~}}
      </p>
    </div>
  </div>
  <div class="right">
    <div class="actions">
      <div class="action">
        <button id="edit">Edit</button>
      </div>
      <div class="action">
        {{#[utils/compare] feature.enabled '===' true}}
        <button id="state">Disable</button>
        {{else}}
        <button id="state">Enable</button>
        {{/[utils/compare]}}
      </div>
      <div class="action">
        <button id="delete">Delete</button>
      </div>
    </div>
  </div>
</div>
{{else}}
{{#[utils/compare] loading '===' true}}
<div class="grid-item">
  <div class="loading-item">
    <span class="loading">
      Fetching data...
      <i class="fas fa-spinner"></i>
    </span>
  </div>
</div>
{{else}}
<div class="grid-item">
  <div class="not-found">
    <p>No features found ☹️</p>
  </div>
</div>
{{/[utils/compare]}}
{{/each}}
