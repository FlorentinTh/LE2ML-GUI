{{#each algorithms as |algorithm|}}
<div class="grid-item" id="algo-infos" data-algo="{{algorithm._id}}">
  <div class="left">
    <div class="label">
      <h3>
        {{algorithm.label}}
      </h3>
    </div>
    {{#[utils/compare] algorithm.enabled '===' true}}
    <p class="state-indic state-enabled">
      <i class="fas fa-circle"></i>
      Enabled
    </p>
    {{else}}
    <p class="state-indic state-disabled">
      <i class="fas fa-circle"></i>
      Disabled
    </p>
    {{/[utils/compare]}}
    <div class="infos">
      <p class="info">
        {{#[utils/compare] algorithm.type '===' 'supervised'}}
        <i class="fas fa-eye"></i>
        {{else}}
        <i class="fas fa-eye-slash"></i>
        {{/[utils/compare]}}
        {{~#[format/capitalize-first] algorithm.type}}{{/[format/capitalize-first]}}
        Algorithm
      </p>
      <p class="info">
        <i class="fas fa-box-open"></i>
        {{~algorithm.container~}}
      </p>
    </div>
  </div>
  <div class="right">
    <div class="actions">
      <p class="action">
        <button id="edit">Edit</button>
      </p>
      <p class="action">
        {{#[utils/compare] algorithm.enabled '===' true}}
        <button id="state">Disable</button>
        {{else}}
        <button id="state">Enable</button>
        {{/[utils/compare]}}
      </p>
      <p class="action">
        <button id="delete">Delete</button>
      </p>
    </div>
  </div>
</div>
{{else}}
{{#[utils/compare] loading '===' true}}
<div class="grid-item">
  <div class="loading-item">
    <span class="loading">
      Fetching data...
      <i class="fas fa-spinner"></i>
    </span>
  </div>
</div>
{{else}}
<div class="grid-item">
  <div class="not-found">
    <p>No algorithms found ☹️</p>
  </div>
</div>
{{/[utils/compare]}}
{{/each}}
