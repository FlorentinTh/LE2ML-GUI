<h1>{{title}}</h1>

<div class="change-password">
  <div class="form">
    <form action="#">
      <input type="email" id="email" name="email" placeholder="Email" autocomplete="email" required />
      <input type="password" id="temp-password" name="tempPassword" placeholder="Temporary Password"
        autocomplete="new-password" minlength="8" required />
      <input type="password" id="temp-password-confirm" name="tempPasswordConfirm"
        placeholder="Temporary Password Confirmation" autocomplete="false" minlength="8" required />
      <button type="submit">Apply temporary password</button>
    </form>
    <button id="cancel" class="link">Cancel</button>
  </div>
</div>
